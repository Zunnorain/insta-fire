<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/download_dialog_corners">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:src="@drawable/unsaved_icon"
        android:layout_marginTop="49dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/exitTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="@string/update_data_of_your_post"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <EditText
        android:id="@+id/updateCaptionET"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:hint="@string/caption_hello_everyone"
        app:layout_constraintEnd_toEndOf="@+id/exitTV"
        app:layout_constraintStart_toStartOf="@+id/exitTV"
        app:layout_constraintTop_toBottomOf="@+id/exitTV" />

    <RelativeLayout
        android:id="@+id/yesRelative"
        android:layout_width="104dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="30dp"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/updateCaptionET"
        app:layout_constraintStart_toStartOf="@+id/updateCaptionET"
        app:layout_constraintTop_toBottomOf="@+id/updateCaptionET">

        <ImageView
            android:id="@+id/yesIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/yes_btn" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>